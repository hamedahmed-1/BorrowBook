@model BookBorrow.Models.Book

<h1>Delete Book</h1>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Book Name
        </dt>
        <dd class="col-sm-10">
            @Model.BookName
        </dd>
        <dt class="col-sm-2">
            Number of Copies
        </dt>
        <dd class="col-sm-10">
            @Model.NumberOfCopies
        </dd>
        <dt class="col-sm-2">
            Book Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.BookImageUrl))
            {
                <img src="@Model.BookImageUrl" alt="Book Image" style="width: 100px; height: auto;" />
            }
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BookId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
